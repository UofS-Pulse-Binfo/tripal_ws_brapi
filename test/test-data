// Organism
$values = [
  [
    'abbreviation' => 'O1',
    'genus' => 'Genus 1',
    'species' => 'Species 1',
    'common_name' => 'Organism One'
  ],
  [
    'abbreviation' => 'O2',
    'genus' => 'Genus 2',
    'species' => 'Species 2',
    'common_name' => 'Organism Two'
  ],
  [
    'abbreviation' => 'O3',
    'genus' => 'Genus 1',
    'species' => 'Species 2',
    'common_name' => 'Organism Three'
  ],
  [
    'abbreviation' => 'O4',
    'genus' => 'Genus 2',
    'species' => 'Species 1',
    'common_name' => 'Organism Four'
  ]
];

foreach($values as $organism) {
  chado_insert_record('organism', $organism);
}

// Terms: value used in type_id when adding stock.
$terms = ['my stocks', 'cool stocks', 'our stocks'];

$ids = [];
foreach($terms as $cvterm) {
  chado_insert_cvterm(
    array('id' => 'test:' . $cvterm, 'name' => $cvterm, 'cv_name' =>'null')
  );

  $m = chado_get_cvterm(['name' => $cvterm]);

  $ids[] = $m->cvterm_id;
}

// Term used to indicate what term a value in prop table means.
// Array below.
$property = tripal_insert_cvterm(
  array('id' => 'test:' . 'prop stock', 'name' => 'prop stock', 'cv_name' =>'null')
);

$propvaltype = $property->cvterm_id;
$awesome = array(1 => 'awesome', 2 => 'not awesome', 3 => 'pretty');

// Inserts 56 sample stocks.
$mystocks= array(
'lola', 'stella', 'luna', 'nala', 'izzy',
'layla', 'lulu', 'ellie', 'piper', 'olivia',
'king', 'max', 'owen', 'piper', 'ralph', 'rex',
'scout', 'tesla', 'wyatt', 'ace', 'bailey',
'bennet', 'chase', 'dexter', 'emmet', 'felix',
'forrest', 'hudson', 'jack', 'emma', 'aria',
'ava', 'mia', 'mila', 'chloe', 'zoe', 'abigail',
'ariana', 'elena', 'eva', 'sarah', 'naomi', 'sadie',
'liam', 'noah', 'lucas', 'leo', 'max',
'dylan', 'landon', 'marcus', 'david', 'rowan',
'cooper', 'gunner', 'tank');

$all_organism = chado_query("SELECT organism_id FROM {organism} WHERE genus LIKE 'Genus %'")
->fetchCol();

foreach($mystocks as $i => $s) {
  $organism = mt_rand(0, count($all_organism) - 1);
  $type_id = mt_rand(0, count($ids) - 1);

  $arr_stock = array(
    'organism_id' => $all_organism[ $organism ],
    'name' => $s,
    'uniquename' => 'uname-' . $s,
    'type_id' => $ids[ $type_id ],
    'dbxref_id' => null,
    'description' => 'description ' . $s,
  );
  $stock = chado_insert_record('stock', $arr_stock);

  $v = mt_rand(1, 3);

  $arr_stockprop = array(
    'stock_id' => $stock,
    'type_id' => $propvaltype,
    'value' => $awesome[$v],
  );
  chado_insert_record('stockprop', $arr_stockprop);
}
